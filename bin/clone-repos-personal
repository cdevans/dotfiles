#!/bin/zsh

echo "Setting up personal repositories..."

PROJECTS=$HOME/Projects
if [ ! -d "$PROJECTS" ]; then
  echo "Creating" $PROJECTS
  mkdir -p $PROJECTS
fi

#######################
# Personal Repositories
#######################

BASEDIR=$PROJECTS/PERSONAL
if [ ! -d "$BASEDIR" ]; then
  echo "Creating" $BASEDIR
  mkdir -p $BASEDIR
fi

REPO="git@github.com:cdevans/cdevans.github.io"
REPODIR="cdevans.github.io"
if [ ! -d "$BASEDIR/$REPODIR" ]; then
  git clone $REPO $BASEDIR/$REPODIR
fi

REPO="git@github.com:cdevans/cde-misc"
REPODIR="cde-misc"
if [ ! -d "$BASEDIR/$REPODIR" ]; then
  git clone $REPO $BASEDIR/$REPODIR
fi

echo "Personal repositories set up..."
