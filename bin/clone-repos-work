#!/bin/zsh

echo "Setting up work repositories..."

PROJECTS=$HOME/Projects
if [ ! -d "$PROJECTS" ]; then
  echo "Creating" $PROJECTS
  mkdir -p $PROJECTS
fi

###################
# Work Repositories
###################

BASEDIR=$PROJECTS/WORK
if [ ! -d "$BASEDIR" ]; then
  echo "Creating" $BASEDIR
  mkdir -p $BASEDIR
fi

echo "Work repositories set up..."
